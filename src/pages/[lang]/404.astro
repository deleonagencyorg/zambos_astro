export async function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params as { lang: Locale };
setLocale(lang);

const pageTitle = lang === 'es' ? 'P√°gina No Encontrada - Zambos' : 'Page Not Found - Zambos';
