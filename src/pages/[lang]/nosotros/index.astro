---
import AboutUsView from '../../../views/AboutUs/index.astro';
import AboutUsViewUS from '../../../views-us/AboutUs/index.astro';
import { type Locale } from '../../../i18n/i18n';
import { getHeaderColors } from '../../../config/headerColors';

export async function getStaticPaths() {
  const locales = ['us', 'es'];
  return locales.map((locale) => ({
    params: { lang: locale },
    props: { currentLang: locale as Locale }
  }));
}

const { currentLang } = Astro.props;

// Set header color config for white background and primary color text using the getHeaderColors function
const headerColorConfig = getHeaderColors('about_us');
---

{currentLang === 'us' ? (
  <AboutUsViewUS currentLang={currentLang} headerColorConfig={headerColorConfig} />
) : (
  <AboutUsView currentLang={currentLang} headerColorConfig={headerColorConfig} />
)}
