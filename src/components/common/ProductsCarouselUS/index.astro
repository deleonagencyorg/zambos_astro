---
interface Product {
  id: string;
  slug: string;
  name: string;
  image: string;
  imageMobile?: string;
  background_color?: string;
  text_color?: string;
  description?: string;
}

export interface Props {
  products: Product[];
  className?: string;
  autoplay?: boolean;
  speed?: number;
  loop?: boolean;
}

const {
  products = [],
  className = '',
  autoplay = true,
  speed = 5000,
  loop = true,
} = Astro.props;

const currentLang = 'us';
const productsItems = Array.isArray(products) ? products : [];
---

<section class={`products-us-section ${className}`}>
  <div
    class="products-us-bg"
    style="background-image: url('https://snack.yummiespromociones.com/SnacksyummiesAssets/bgproductsus.webp');"
  >
    <h2 class="products-us-title">OUR PRODUCTS</h2>

    <div class="products-us-carousel" data-autoplay={autoplay} data-speed={speed}>
      <div class="swiper-container-us">
        <div class="swiper-wrapper">
          {productsItems.map((product) => (
            <div class="swiper-slide">
              <div class="product-us-slide">
                <div class="product-us-left">
                  <h3 class="product-us-name">{product.name}</h3>
                  <a
                    href={`/${currentLang}/products/${product.id}`}
                    class="product-us-btn"
                    data-no-swipe="true"
                  >
                    View product
                  </a>
                </div>
                <div class="product-us-right">
                  <img
                    src={product.image}
                    alt={product.name}
                    class="product-us-img"
                    loading="lazy"
                  />
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="swiper-pagination-us"></div>

        <button class="swiper-button-prev arrow-us arrow-us-prev" aria-label="Previous">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="swiper-button-next arrow-us arrow-us-next" aria-label="Next">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>

<style>
  .products-us-section {
    width: 100%;
    overflow: hidden;
  }

  .products-us-bg {
    width: 100%;
    min-height: 520px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    padding: 2.5rem 0 3rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .products-us-title {
    text-align: center;
    color: #fff;
    font-size: 3rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    margin-bottom: 1rem;
    text-shadow: 2px 3px 6px rgba(0,0,0,0.25);
  }

  .products-us-carousel {
    width: 100%;
    position: relative;
    flex: 1;
  }

  .swiper-container-us {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
  }

  .swiper-wrapper {
    display: flex;
  }

  .swiper-slide {
    height: auto;
    display: flex;
  }

  .product-us-slide {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem 5rem;
    min-height: 380px;
  }

  .product-us-left {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    justify-content: center;
    padding-right: 2rem;
  }

  .product-us-name {
    font-size: 3.5rem;
    font-weight: 900;
    color: #fff;
    text-transform: uppercase;
    line-height: 1.05;
    text-shadow: 2px 3px 8px rgba(0,0,0,0.22);
  }

  .product-us-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(120, 20, 20, 0.75);
    color: #fff;
    padding: 0.875rem 2rem;
    border-radius: 50px;
    font-size: 1.05rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    max-width: 260px;
    cursor: pointer;
    white-space: nowrap;
    box-shadow: 0 4px 16px rgba(0,0,0,0.18);
  }

  .product-us-btn:hover {
    background: rgba(100, 10, 10, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 6px 22px rgba(0,0,0,0.28);
  }

  .product-us-right {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-us-img {
    max-width: 340px;
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: drop-shadow(0 12px 32px rgba(0,0,0,0.28));
    animation: floatUS 3s ease-in-out infinite;
  }

  @keyframes floatUS {
    0%, 100% { transform: translateY(0px) rotate(-2deg); }
    50% { transform: translateY(-16px) rotate(2deg); }
  }

  /* Arrows */
  .arrow-us {
    position: absolute;
    top: 55%;
    transform: translateY(-50%);
    z-index: 20;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .arrow-us::after {
    display: none;
  }

  .arrow-us-prev {
    left: 1.5rem;
    background: rgba(255, 255, 255, 0.35);
    color: #fff;
  }

  .arrow-us-prev:hover {
    background: rgba(255, 255, 255, 0.55);
    transform: translateY(-50%) scale(1.08);
  }

  .arrow-us-next {
    right: 1.5rem;
    background: rgba(140, 20, 20, 0.7);
    color: #fff;
  }

  .arrow-us-next:hover {
    background: rgba(140, 20, 20, 0.9);
    transform: translateY(-50%) scale(1.08);
  }

  /* Pagination */
  :global(.swiper-pagination-us) {
    text-align: center;
    padding-top: 1rem;
  }

  :global(.swiper-pagination-us .swiper-pagination-bullet) {
    background: #fff !important;
    opacity: 0.45 !important;
    width: 10px !important;
    height: 10px !important;
    transition: all 0.3s ease !important;
    margin: 0 4px !important;
  }

  :global(.swiper-pagination-us .swiper-pagination-bullet-active) {
    opacity: 1 !important;
    width: 26px !important;
    border-radius: 5px !important;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .product-us-slide {
      padding: 2rem 4rem;
    }

    .product-us-name {
      font-size: 2.5rem;
    }

    .product-us-img {
      max-width: 280px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .products-us-bg {
      min-height: auto;
      padding: 2rem 0 2.5rem;
    }

    .products-us-title {
      font-size: 2rem;
    }

    .product-us-slide {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 1.5rem 1.5rem;
      min-height: auto;
      gap: 1.5rem;
    }

    .product-us-left {
      order: 2;
      padding-right: 0;
      align-items: center;
    }

    .product-us-right {
      order: 1;
    }

    .product-us-name {
      font-size: 2rem;
    }

    .product-us-btn {
      font-size: 1rem;
      padding: 0.875rem 2rem;
    }

    .product-us-img {
      max-width: 220px;
    }

    .arrow-us {
      width: 36px;
      height: 36px;
      top: 40%;
    }

    .arrow-us-prev { left: 0.5rem; }
    .arrow-us-next { right: 0.5rem; }

    .arrow-us svg {
      width: 16px;
      height: 16px;
    }
  }

  /* Small mobile */
  @media (max-width: 480px) {
    .product-us-name {
      font-size: 1.6rem;
    }

    .product-us-img {
      max-width: 180px;
    }

    .product-us-btn {
      font-size: 0.875rem;
      padding: 0.75rem 1.5rem;
    }
  }
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  let usCarouselInstances: Swiper[] = [];

  function cleanupUSCarousels() {
    usCarouselInstances.forEach(s => s.destroy());
    usCarouselInstances = [];
  }

  function initUSCarousels() {
    cleanupUSCarousels();

    const carousels = document.querySelectorAll('.products-us-carousel');
    carousels.forEach((el) => {
      if (!(el instanceof HTMLElement)) return;

      const swiperContainer = el.querySelector('.swiper-container-us') as HTMLElement;
      if (!swiperContainer) return;

      const links = swiperContainer.querySelectorAll('a[data-no-swipe]');
      links.forEach(link => {
        link.addEventListener('click', (e) => e.stopPropagation());
        link.classList.add('swiper-no-swiping');
      });

      const swiper = new Swiper(swiperContainer, {
        modules: [Navigation, Pagination, Autoplay],
        slidesPerView: 1,
        spaceBetween: 0,
        loop: true,
        autoplay: el.dataset.autoplay !== 'false' ? {
          delay: parseInt(el.dataset.speed || '5000', 10),
          disableOnInteraction: false,
          pauseOnMouseEnter: true,
        } : false,
        navigation: {
          nextEl: el.querySelector('.swiper-button-next') as HTMLElement,
          prevEl: el.querySelector('.swiper-button-prev') as HTMLElement,
        },
        pagination: {
          el: el.querySelector('.swiper-pagination-us') as HTMLElement,
          clickable: true,
          dynamicBullets: true,
        },
        speed: 800,
        effect: 'slide',
        preventClicksPropagation: true,
        preventClicks: false,
        noSwiping: true,
        noSwipingClass: 'swiper-no-swiping',
      });

      usCarouselInstances.push(swiper);
    });
  }

  document.addEventListener('DOMContentLoaded', initUSCarousels);
  document.addEventListener('astro:page-load', initUSCarousels);
  document.addEventListener('astro:after-swap', initUSCarousels);
  document.addEventListener('astro:before-swap', cleanupUSCarousels);
</script>
