---
// ProductCarousel.astro
interface Product {
  id: string;
  slug: string;
  name: string;
  image: string;
  imageMobile?: string;
  background_color?: string;
  text_color?: string;
  description?: string;
}

export interface Props {
  products: Product[];
  className?: string;
  autoplay?: boolean;
  speed?: number;
  loop?: boolean;
  title?: string;
  titleColor?: string;
  showArrows?: boolean;
}

const {
  products = [],
  className = '',
  autoplay = true,
  speed = 5000,
  loop = true,
  title = 'NUESTROS PRODUCTOS',
  titleColor = '#FFFFFF',
  showArrows = false
} = Astro.props;

const currentLang = Astro.url.pathname.split('/')[1] === 'es' ? 'es' : 'us';

// Textos según idioma
const texts = {
  es: {
    viewDetail: 'Ver detalles'
  },
  us: {
    viewDetail: 'View Detail'
  }
};

const currentTexts = texts[currentLang as keyof typeof texts];

// Asegurarse de que products es un array
const productsItems = Array.isArray(products) ? products : [];
---

<section class={`product-carousel-section ${className}`}>
  <!-- Carrusel -->
  <div class="products-carousel" data-autoplay={autoplay} data-speed={speed} data-show-arrows={showArrows}>
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {productsItems.map((product) => (
          <div class="swiper-slide">
            <div class="product-slide">
              <div class="slide-content-wrapper">
                <div class="left-content">
                  <div class="text-content">
                    <h3 class="product-name">
                      {product.name}
                    </h3>
                    {product.description && (
                      <p class="product-description">
                        {product.description}
                      </p>
                    )}
                  </div>
                  
                  <a 
                    href={`/${currentLang}/${currentLang === 'es' ? 'productos' : 'products'}/${product.id}`}
                    class="view-detail-btn"
                    data-no-swipe="true"
                  >
                    {currentTexts.viewDetail}
                  </a>
                </div>

                <div class="right-content">
                  <div class="product-image-wrapper">
                    <img 
                      src={product.image}
                      alt={product.name}
                      class="product-image"
                      loading="lazy"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Paginación -->
      <div class="swiper-pagination"></div>

      <!-- Flechas de navegación -->
      {showArrows && (
        <button class="swiper-button-prev product-arrow product-arrow-prev" aria-label="Previous">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="swiper-button-next product-arrow product-arrow-next" aria-label="Next">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      )}
    </div>
  </div>
</section>

<style>
  .product-carousel-section {
    width: 100%;
    overflow: hidden;
  }

  /* Carrusel */
  .products-carousel {
    width: 100%;
    position: relative;
  }

  .swiper-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .swiper-wrapper {
    display: flex;
  }

  .swiper-slide {
    height: auto;
    display: flex;
  }

  /* Slide de Producto */
  .product-slide {
    width: 100%;
    min-height: 600px;
    position: relative;
    overflow: hidden;
  }

  /* Contenido del Slide */
  .slide-content-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
    height: 100%;
  }

  /* Lado Izquierdo */
  .left-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2.5rem;
    padding-left: 6rem;
    order: 1; /* Desktop: aparece primero (izquierda) */
  }

  .text-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .product-name {
    font-size: 4rem;
    font-weight: 900;
    color: white;
    text-transform: uppercase;
    line-height: 1.1;
    letter-spacing: 0.02em;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .product-description {
    font-size: 1.5rem;
    color: white;
    opacity: 0.95;
    line-height: 1.4;
  }

  /* Botón Ver detalles */
  .view-detail-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #FF3333;
    color: white;
    padding: 1.25rem 3rem;
    border-radius: 50px;
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 51, 51, 0.4);
    max-width: 300px;
    cursor: pointer;
  }

  .view-detail-btn:hover {
    background: #FF1A1A;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 51, 51, 0.6);
  }

  /* Lado Derecho */
  .right-content {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    order: 2; /* Desktop: aparece segundo (derecha) */
  }

  .product-image-wrapper {
    position: relative;
    width: 100%;
    max-width: 400px;
    animation: float 3s ease-in-out infinite;
  }

  .product-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.3));
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(-2deg);
    }
    50% {
      transform: translateY(-20px) rotate(2deg);
    }
  }

  /* Paginación */
  :global(.swiper-pagination) {
    bottom: 20px !important;
  }

  :global(.swiper-pagination-bullet) {
    background: red !important;
    opacity: 0.5 !important;
    width: 12px !important;
    height: 12px !important;
    transition: all 0.3s ease !important;
  }

  :global(.swiper-pagination-bullet-active) {
    opacity: 1 !important;
    width: 30px !important;
    border-radius: 6px !important;
  }

  /* Responsive: Tablet */
  @media (max-width: 1024px) {
    .product-slide {
      min-height: 500px;
      padding: 3rem 2rem;
    }

    .slide-content-wrapper {
      gap: 2rem;
    }

    .left-content {
      padding-left: 3rem;
    }

    .product-name {
      font-size: 3rem;
    }

    .product-description {
      font-size: 1.25rem;
    }

    .view-detail-btn {
      font-size: 1.25rem;
      padding: 1rem 2.5rem;
    }

    .product-image-wrapper {
      max-width: 350px;
    }
  }

  /* Responsive: Mobile */
  @media (max-width: 768px) {
    :global(.swiper-pagination) {
      bottom: -20px !important;
    }
    .product-carousel-section {
      padding: 2rem 0;
    }

    .product-slide {
      min-height: auto;
      padding: 2rem 1.5rem;
    }

    .slide-content-wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    /* Cambiar orden: imagen arriba, texto abajo */
    .left-content {
      order: 2; /* Móvil: aparece segundo (abajo) */
      padding-left: 0;
      align-items: center;
    }

    .right-content {
      order: 1; /* Móvil: aparece primero (arriba) */
    }

    .product-name {
      font-size: 2rem;
    }

    .product-description {
      font-size: 1rem;
    }

    .view-detail-btn {
      font-size: 1rem;
      padding: 0.875rem 2rem;
      max-width: 250px;
      width: 100%;
    }

    .product-image-wrapper {
      max-width: 300px;
    }
  }

  /* Flechas de navegación */
  .product-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 20;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.95);
    color: #0DB14A;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
    transition: all 0.3s ease;
  }

  .product-arrow:hover {
    background: #ffffff;
    transform: translateY(-50%) scale(1.1);
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.35);
  }

  .product-arrow-prev {
    left: 1.5rem;
  }

  .product-arrow-next {
    right: 1.5rem;
  }

  .product-arrow::after {
    display: none;
  }

  @media (max-width: 768px) {
    .product-arrow {
      width: 40px;
      height: 40px;
    }

    .product-arrow-prev {
      left: 0.5rem;
    }

    .product-arrow-next {
      right: 0.5rem;
    }

    .product-arrow svg {
      width: 18px;
      height: 18px;
    }
  }

  /* Responsive: Small Mobile */
  @media (max-width: 480px) {
    .product-slide {
      padding: 1.5rem 1rem;
    }

    .product-name {
      font-size: 1.75rem;
    }

    .view-detail-btn {
      font-size: 0.875rem;
      padding: 0.75rem 1.5rem;
    }

    .product-image-wrapper {
      max-width: 250px;
    }
  }
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  interface ProductCarouselOptions {
    autoplay?: boolean;
    speed?: number;
    loop?: boolean;
  }

  class ProductCarousel {
    private container: HTMLElement;
    private swiper: Swiper | null = null;
    private options: ProductCarouselOptions;

    constructor(container: HTMLElement, options: ProductCarouselOptions = {}) {
      this.container = container;
      this.options = options;
      this.init();
    }

    private init(): void {
      const swiperContainer = this.container.querySelector('.swiper-container') as HTMLElement;
      
      if (!swiperContainer) return;

      // Prevenir que swiper maneje los clicks en los enlaces
      const productLinks = swiperContainer.querySelectorAll('a[data-no-swipe]');
      productLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          e.stopPropagation();
        });
        link.classList.add('swiper-no-swiping');
      });

      const hasArrows = this.container.dataset.showArrows === 'true';

      this.swiper = new Swiper(swiperContainer, {
        modules: [Navigation, Pagination, Autoplay],
        slidesPerView: 1,
        spaceBetween: 0,
        loop: this.options.loop !== false,
        autoplay: this.options.autoplay ? {
          delay: this.options.speed || 5000,
          disableOnInteraction: false,
          pauseOnMouseEnter: true,
        } : false,
        navigation: hasArrows ? {
          nextEl: this.container.querySelector('.swiper-button-next') as HTMLElement,
          prevEl: this.container.querySelector('.swiper-button-prev') as HTMLElement,
        } : false,
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
          dynamicBullets: true,
        },
        speed: 800,
        effect: 'slide',
        preventClicksPropagation: true,
        preventClicks: false,
        noSwiping: true,
        noSwipingClass: 'swiper-no-swiping',
      });
    }

    public destroy(): void {
      if (this.swiper) {
        this.swiper.destroy();
        this.swiper = null;
      }
    }
  }

  // Variables globales
  let carouselInstances: ProductCarousel[] = [];

  // Limpiar instancias
  function cleanupCarousels() {
    carouselInstances.forEach(instance => instance.destroy());
    carouselInstances = [];
  }

  // Inicializar carruseles
  function initializeCarousels() {
    cleanupCarousels();
    
    const carousels = document.querySelectorAll('.products-carousel');
    carousels.forEach((element: Element) => {
      if (element instanceof HTMLElement) {
        const instance = new ProductCarousel(element, {
          autoplay: element.dataset.autoplay !== 'false',
          speed: parseInt(element.dataset.speed || '5000', 10),
          loop: true,
        });
        carouselInstances.push(instance);
      }
    });
  }

  // Event listeners
  document.addEventListener('DOMContentLoaded', initializeCarousels);
  document.addEventListener('astro:page-load', initializeCarousels);
  document.addEventListener('astro:after-swap', initializeCarousels);
  document.addEventListener('astro:before-swap', cleanupCarousels);
</script>
