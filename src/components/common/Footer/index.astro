<footer class="bg-greenDark w-full ">
  <div class="mx-auto max-w-[1200px] px-6 py-6 flex flex-col md:flex-row md:items-center md:justify-between gap-6">

    <!-- Logo -->
    <a href={`/${currentLang}/`} class="flex items-center justify-center md:justify-start">
      <LazyImage
        src={logoSrc}
        alt="Zambos"
        class="h-16 md:h-28 w-auto"
      />
    </a>

    <!-- Links -->
    <div class="flex flex-col md:flex-row items-center gap-6 md:gap-8 md:pr-[25px]">
      <nav class="hidden md:flex items-center space-x-8">
        {menuItems.map(item => (
          <a
            href={item.href}
            class="text-white font-sans text-[20px] md:text-[22px] font-medium hover:opacity-80 transition"
          >
            {item.text}
          </a>
        ))}
      </nav>
  
      <!-- Social -->
      <div class="flex items-center space-x-4">
        <a href={instagramUrl} target="_blank" aria-label="Instagram">
          <svg class="w-6 h-6 md:w-7 md:h-7 text-white hover:opacity-80" fill="currentColor" viewBox="0 0 24 24">
