---
import { t, type Locale } from '../../../i18n/i18n';
import LazyImage from '../LazyImage.astro';

export interface Props {
  currentLang: Locale;
}

const { currentLang } = Astro.props;

const menuItems = t('menu_items_header', { namespace: 'common', locale: currentLang }) as any[];
const logoSrc = t('assets.logo', { namespace: 'common', locale: currentLang });
const instagramUrl = t('social_media.instagram.url', { namespace: 'common', locale: currentLang });
const facebookUrl = t('social_media.facebook.url', { namespace: 'common', locale: currentLang });
const tiktokUrl = t('social_media.tiktok.url', { namespace: 'common', locale: currentLang });
const footerData = t('footer', { namespace: 'common', locale: currentLang }) as any;
---

<footer class="footer-us">
  <div class="footer-us-bg">
    <!-- Main row -->
    <div class="footer-us-inner">

      <!-- Logo -->
      <a href={`/${currentLang}/`} class="footer-us-logo">
        <LazyImage
          src={logoSrc}
          alt="Zambos USA"
          class="h-20 md:h-28 w-auto"
        />
      </a>

      <!-- Nav links -->
      <nav class="footer-us-nav">
        {menuItems.map(item => (
          <a href={item.href} class="footer-us-link">
            {item.text}
          </a>
        ))}
      </nav>

      <!-- Social icons -->
      <div class="footer-us-social">
        <a href={instagramUrl} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
          <svg class="footer-us-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zM12 7.1A4.9 4.9 0 1 0 12 17a4.9 4.9 0 0 0 0-9.8zM18.4 6.6a1.15 1.15 0 1 0 0-2.3 1.15 1.15 0 0 0 0 2.3z"/>
          </svg>
        </a>
        <a href={facebookUrl} target="_blank" rel="noopener noreferrer" aria-label="Facebook">
          <svg class="footer-us-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M22 12a10 10 0 1 0-11.5 9.9v-7H8v-3h2.5V9.5c0-2.5 1.5-3.9 3.8-3.9 1.1 0 2.2.2 2.2.2v2.4h-1.2c-1.2 0-1.6.8-1.6 1.5V12H16l-.5 3h-2.5v7A10 10 0 0 0 22 12z"/>
          </svg>
        </a>
        <a href={tiktokUrl} target="_blank" rel="noopener noreferrer" aria-label="TikTok">
          <svg class="footer-us-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M21 8.3a6.7 6.7 0 0 1-4.3-1.5v8.6a6 6 0 1 1-6-6c.3 0 .6 0 .9.1v3.1a2.8 2.8 0 1 0 2.1 2.7V2h3.3A6.7 6.7 0 0 0 21 6.3v2z"/>
          </svg>
        </a>
      </div>

    </div>


  </div>
</footer>

<style>
  .footer-us {
    width: 100%;
  }

  .footer-us-bg {
    width: 100%;
    background-image: url('https://snack.yummiespromociones.com/SnacksyummiesAssets/footerus.webp');
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;
    position: relative;
  }

  .footer-us-bg::before {
    content: none;
  }

  .footer-us-inner {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2.5rem 2rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .footer-us-logo {
    flex-shrink: 0;
  }

  .footer-us-nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-us-link {
    color: #1a3a1a;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .footer-us-link:hover {
    opacity: 0.75;
  }

  .footer-us-social {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }

  .footer-us-icon {
    width: 26px;
    height: 26px;
    color: #1a3a1a;
    transition: opacity 0.2s;
  }

  .footer-us-social a:hover .footer-us-icon {
    opacity: 0.6;
  }

  .footer-us-copy {
    position: relative;
    z-index: 1;
    border-top: 1px solid rgba(0, 60, 0, 0.2);
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
    color: rgba(20, 50, 20, 0.75);
    font-size: 0.875rem;
  }

  .footer-us-privacy {
    color: rgba(20, 50, 20, 0.75);
    text-decoration: underline;
    transition: color 0.2s;
  }

  .footer-us-privacy:hover {
    color: #1a3a1a;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .footer-us-inner {
      gap: 1.5rem;
    }

    .footer-us-nav {
      gap: 1rem;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .footer-us-inner {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 2rem 1.25rem;
    }

    .footer-us-nav {
      flex-direction: row;
      justify-content: center;
      gap: 1rem;
    }

    .footer-us-right {
      align-items: center;
    }

    .footer-us-copy {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
      padding: 0.875rem 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .footer-us-nav {
      gap: 0.75rem;
    }

    .footer-us-link {
      font-size: 0.95rem;
    }
  }
</style>
