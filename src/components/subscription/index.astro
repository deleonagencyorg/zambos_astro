---
// NewsletterSignup.astro
import LazyImage from '../common/LazyImage.astro';
import { getLocale } from '../../i18n/i18n';

export interface Props {
  currentLang?: string;
}

const { currentLang = getLocale() } = Astro.props;
---

<section class="newsletter-section">
  <!-- Imagen de fondo -->
  <LazyImage
    src="/images/es/subscription.png"
    alt="Subscription"
    class="waves"
  />

  <!-- Contenido Principal - Por encima de la imagen -->
  <div class="content">
    <div class="container">
      <h1 class="title">{currentLang === 'es' ? 'UNETE A NUESTRA FAMILIA' : 'JOIN OUR FAMILY'}</h1>
      
      <p class="subtitle">
        {currentLang === 'es' ? 'Entérate de nuestras últimas novedades en experiencias, sabores y más.' : 'Stay updated on our latest news in experiences, flavors, and more.'}
      </p>

      <form class="form" id="newsletterForm">
        <input
          type="email"
          class="email-input"
          placeholder="Correo electrónico"
          required
          aria-label="Correo electrónico"
        />
        <button type="submit" class="submit-button">
          {currentLang === 'es' ? 'Suscríbeme' : 'Subscribe'}
        </button>
      </form>

      <div class="success-message" id="successMessage">
        {currentLang === 'es' ? '¡Gracias por suscribirte!' : 'Thank you for subscribing!'}
      </div>
    </div>
  </div>

  <!-- Decoración inferior azul -->
  <div class="bottom-decoration"></div>
</section>

<style>
  .newsletter-section {
    position: relative;
    width: 100%;
    overflow: hidden;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Imagen de fondo */
  .waves {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  /* Contenido por encima de la imagen */
  .content {
    position: relative;
    z-index: 20;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .container {
    text-align: center;
    max-width: 600px;
    padding: 0 20px;
  }

  .title {
    font-size: 3.5rem;
    font-weight: 900;
    color: #059669;
    margin: 0 0 20px 0;
    letter-spacing: 0.02em;
    text-shadow: 0 2px 4px rgba(255, 255, 255, 0.3);
  }

  .subtitle {
    font-size: 1.1rem;
    color: #0d9488;
    margin: 0 0 40px 0;
    font-weight: 500;
    text-shadow: 0 1px 2px rgba(255, 255, 255, 0.2);
  }

  .form {
    display: flex;
    flex-direction: row;
    gap: 15px;
    align-items: center;
    justify-content: center;
  }

  .email-input {
    padding: 12px 20px;
    font-size: 1rem;
    border: none;
    border-radius: 50px;
    width: 100%;
    max-width: 300px;
    background-color: #FFEA63;
    color: #6b7280;
    transition: all 0.3s ease;
    position: relative;
    z-index: 25;
  }

  .email-input::placeholder {
    color: #9ca3af;
  }

  .email-input:focus {
    outline: none;
    background-color: white;
    box-shadow: 0 0 0 3px rgba(5, 150, 105, 0.1);
  }

  .submit-button {
    padding: 12px 40px;
    font-size: 1rem;
    font-weight: 600;
    color: white;
    background-color: #059669;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
    min-width: 160px;
    position: relative;
    z-index: 25;
  }

  .submit-button:hover {
    background-color: #047857;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(5, 150, 105, 0.3);
  }

  .submit-button:active {
    transform: translateY(0);
  }

  .success-message {
    display: none;
    margin-top: 20px;
    padding: 12px 20px;
    background-color: #d1fae5;
    color: #047857;
    border-radius: 8px;
    font-weight: 500;
    position: relative;
    z-index: 25;
  }

  .success-message.show {
    display: block;
    animation: slideIn 0.3s ease;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .bottom-decoration {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 8px;
    background: linear-gradient(to right, #0891b2, #06b6d4);
    z-index: 30;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .newsletter-section {
      min-height: 400px;
    }

    .title {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .form {
      flex-direction: column;
    }

    .email-input {
      max-width: 100%;
    }

    .submit-button {
      width: 100%;
    }
  }
</style>

<script>
  const form = document.getElementById('newsletterForm');
  const successMessage = document.getElementById('successMessage');
  const emailInput = form.querySelector('input[type="email"]');

  form.addEventListener('submit', (e) => {
    e.preventDefault();

    if (emailInput.value) {
      // Mostrar mensaje de éxito
      successMessage.classList.add('show');
      emailInput.value = '';

      // Ocultar mensaje después de 3 segundos
      setTimeout(() => {
        successMessage.classList.remove('show');
      }, 3000);
    }
  });
</script>