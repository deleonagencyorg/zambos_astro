---
import type { Locale } from '../../i18n/i18n';
import type { HeaderColorConfig } from '../../config/headerColors';

const { pathname } = Astro.url;
const currentPath = pathname;

export interface Props {
  activeLocale: Locale;
  headerColorConfig?: HeaderColorConfig;
}
const { activeLocale, headerColorConfig } = Astro.props;

// Mapeo de rutas equivalentes entre idiomas
const routeTranslations: Record<string, string> = {
  'recetas': 'recipes',
  'productos': 'products',
  'noticias': 'news',
  'contacto': 'contact',
  'marcas': 'brands',
  'nosotros': 'about-us',
  'blog': 'blog'
};

// Sections that have detail pages â€” switching lang on a detail page falls back to the listing
// Key: es slug, Value: en slug
const detailSections: Record<string, string> = {
  'recetas': 'recipes',
  'blog': 'blog',
  'noticias': 'news',
  'productos': 'products',
};

// Extraer la ruta actual y el idioma
const pathParts = currentPath.split('/').filter(Boolean);
const currentLocale = pathParts[0] || 'es';
const currentRoute = pathParts.slice(1).join('/');

// FunciÃ³n para obtener la ruta traducida
const getTranslatedPath = (targetLocale: Locale) => {
  const pathParts = currentPath.split('/').filter(Boolean);
  const currentRoute = pathParts.slice(1).join('/');
  
  // Para la ruta raÃ­z (/es o /us)
  if (pathParts.length <= 1) return `/${targetLocale}`;

  // Detect if we are on a detail page: /lang/section/id (3 segments)
  if (pathParts.length >= 3) {
    const section = pathParts[1];

    // Build reverse map: en slug â†’ es slug
    const reverseDetail: Record<string, string> = {};
    for (const [esSlug, enSlug] of Object.entries(detailSections)) {
      reverseDetail[enSlug] = esSlug;
    }

    // Resolve the canonical es slug for the current section
    const esSection = currentLocale === 'es' ? section : (reverseDetail[section] ?? section);
    const enSection = detailSections[esSection] ?? esSection;

    if (esSection in detailSections) {
      // We are on a detail page â€” redirect to the listing in the target language
      const targetSection = targetLocale === 'es' ? esSection : enSection;
      return `/${targetLocale}/${targetSection}`;
    }
  }

  // Si estamos en una ruta mapeada, traducirla
  const translatedRoute = Object.entries(routeTranslations).reduce(
    (acc, [esRoute, enRoute]) => {
      if (currentLocale === 'es' && currentRoute.startsWith(esRoute)) {
        return currentRoute.replace(esRoute, enRoute);
      }
      if (currentLocale === 'us' && currentRoute.startsWith(enRoute)) {
        return currentRoute.replace(enRoute, esRoute);
      }
      return acc;
    },
    currentRoute
  );

  return `/${targetLocale}/${translatedRoute}`;
};

const esUrl = activeLocale === 'es' ? currentPath : getTranslatedPath('es');
const usUrl = activeLocale === 'us' ? currentPath : getTranslatedPath('us');

// Usar colores por defecto si no se proporciona configuraciÃ³n
const textColor = headerColorConfig?.textColor || 'text-white';
const hoverTextColor = headerColorConfig?.hoverTextColor || 'hover:text-yellow-300';

// Determinar el color del texto basado en si es un fondo especial
const textColorValue = headerColorConfig?.isSpecialBackground ? 'black' : (headerColorConfig?.textColor?.replace('text-', '') || 'white');
