---
import { t, getLocale } from '../../i18n/i18n';
import LazyImage from '../common/LazyImage.astro';

interface Props {
  image: string;
  title: string;
  id: string;
  slug?: string;
  summary?: string;
  date?: string;
  category?: string;
  isNew?: boolean;
  currentLang?: string;
}

const {
  image, 
  title, 
  id,
  slug,
  summary,
  date,
  category,
  isNew = false,
  currentLang: propLang
} = Astro.props;

const currentLang = propLang || getLocale();
const labels = t('labels', { namespace: 'blog', locale: currentLang });
const blogLink = `/${currentLang}/blog/${slug || id}`;
---

<article class="blog-card">
  <a href={blogLink} class="blog-card__link group">
    <!-- Image Container -->
    <div class="blog-card__image-container">
      <LazyImage
        src={image || `/images/${currentLang}/slider1.png`}
        alt={title}
        class="blog-card__image"
        fallbackSrc={`/images/${currentLang}/slider1.png`}
      />
      
      <!-- Gradient Overlay -->
      <div class="blog-card__overlay"></div>
      
      <!-- Date Badge -->
      {date && (
        <span class="blog-card__date">{date}</span>
      )}
      
      <!-- Content Container -->
      <div class="blog-card__content">
        <!-- Tags Row -->
        <div class="blog-card__tags">
          {category && (
            <span class="blog-card__tag blog-card__tag--category">
              {category}
            </span>
          )}
          {isNew && (
            <span class="blog-card__tag blog-card__tag--new">
              {currentLang === 'es' ? 'NUEVO' : 'NEW'}
            </span>
          )}
        </div>
        
        <!-- Title -->
        <h3 class="blog-card__title">{title}</h3>
        
        <!-- Summary -->
        {summary && (
          <p class="blog-card__summary">{summary}</p>
        )}
        
        <!-- CTA Button -->
        <span class="blog-card__btn">
          {labels.readMore}
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .blog-card {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    background: #1a1a1a;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .blog-card:hover {
    transform: scale(1.02);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.25);
  }

  .blog-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .blog-card__image-container {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .blog-card__image-container {
      aspect-ratio: 3 / 2;
    }
  }

  .blog-card__image {
    display: block;
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.5s ease-out;
  }

  .blog-card:hover .blog-card__image {
    transform: scale(1.06);
  }

  .blog-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.75) 100%
    );
    transition: background 0.3s ease;
  }

  .blog-card:hover .blog-card__overlay {
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.05) 0%,
      rgba(0, 0, 0, 0.15) 50%,
      rgba(0, 0, 0, 0.85) 100%
    );
  }

  .blog-card__date {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    z-index: 10;
    background: rgba(0, 0, 0, 0.6);
    color: #fff;
    padding: 0.3rem 0.75rem;
    border-radius: 5px;
    font-size: 0.75rem;
    font-weight: 600;
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
  }

  .blog-card__content {
    position: absolute;
    inset-inline: 0;
    bottom: 0;
    padding: 1rem;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  @media (min-width: 768px) {
    .blog-card__content {
      padding: 1.25rem;
      gap: 0.6rem;
    }
  }

  .blog-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .blog-card__tag {
    display: inline-block;
    padding: 0.3rem 0.8rem;
    border-radius: 50px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  @media (min-width: 768px) {
    .blog-card__tag {
      padding: 0.35rem 0.9rem;
      font-size: 0.75rem;
    }
  }

  .blog-card__tag--category {
    background: #0DB04A;
    color: #fff;
  }

  .blog-card__tag--new {
    background: #E31837;
    color: #fff;
  }

  .blog-card__title {
    color: #fff;
    font-size: 1rem;
    font-weight: 800;
    line-height: 1.25;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: -0.01em;
    text-shadow: 0 1px 4px rgba(0,0,0,0.5);
  }

  @media (min-width: 768px) {
    .blog-card__title {
      font-size: 1.15rem;
    }
  }

  @media (min-width: 1024px) {
    .blog-card__title {
      font-size: 1.25rem;
    }
  }

  .blog-card__summary {
    color: rgba(255, 255, 255, 0.88);
    font-size: 0.8rem;
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .blog-card__summary {
      font-size: 0.875rem;
    }
  }

  .blog-card__btn {
    display: inline-flex;
    align-items: center;
    width: fit-content;
    margin-top: 0.25rem;
    padding: 0.5rem 1.25rem;
    background: #E31837;
    color: #fff;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    transition: all 0.3s ease;
    box-shadow: 0 3px 12px rgba(227, 24, 55, 0.25);
  }

  @media (min-width: 768px) {
    .blog-card__btn {
      padding: 0.55rem 1.4rem;
      font-size: 0.8rem;
    }
  }

  .blog-card:hover .blog-card__btn {
    background: #c41530;
    transform: translateY(-2px);
    box-shadow: 0 5px 18px rgba(227, 24, 55, 0.35);
  }

  /* Animation on load */
  @keyframes cardSlideUp {
    from {
      opacity: 0;
      transform: translateY(25px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .blog-card {
    animation: cardSlideUp 0.5s ease forwards;
  }
</style>