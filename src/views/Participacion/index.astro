---
// src/views/Participacion/index.astro
import { type Locale } from '../../i18n/i18n';
import MainLayout from '../../layouts/MainLayout.astro';

interface Props {
  currentLang: Locale;
  headerColorConfig?: any;
}

const { currentLang, headerColorConfig } = Astro.props;

// Meta information
const title = 'Participación';
const metaDescription = 'Formulario de participación.';
---

<MainLayout title={title} description={metaDescription} headerColors={headerColorConfig}>
  <!-- Content Section -->
  <section class="bg-white flex-1 min-h-0">
    <div class="w-full h-full">
      <div class="iframe-container h-full" style="position: relative; width: 100%; height: 100%; overflow: hidden;">
        <iframe 
          src="" 
          style="position: absolute; inset: 0; width: 100%; height: 100%; border: none;"
          title="Formulario de Participación"
          loading="lazy"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* El contenedor del iframe ocupa todo el alto disponible dentro del main */
  .iframe-container { position: relative; width: 100%; height: 100%; overflow: hidden; }

  .iframe-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  /* Adjust aspect ratio for different screen sizes */
  @media (max-width: 768px) {
    .iframe-container {
      padding-bottom: 100%; /* More square on mobile */
    }
  }

  @media (min-width: 1024px) {
    .iframe-container {
      padding-bottom: 60%; /* Wider on desktop */
    }
  }

  /* Animation classes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }
</style>
