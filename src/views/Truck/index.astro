import SimpleGallery from '../../components/common/Gallery/SimpleGallery.astro';

const currentLang = getLocale();
const data = truckEs; // Solo ES

const gallerySlides = (data.gallery?.images || []).map((url) => ({
  desktop: url,
  mobile: url,
  alt: data.gallery?.title || 'Zambos Truck',
  title: '',
  subtitle: '',
}));

type RecipeItem = { id: string; title: string; image: string; price?: string };

const recipeModules = import.meta.glob<{ default: RecipeItem }>("../../locales/*/recipes/*.json");
const recipeItems: RecipeItem[] = [];

for (const path in recipeModules) {
  const parts = path.split('/');
  const localesIndex = parts.lastIndexOf('locales');
  const lang = localesIndex >= 0 ? parts[localesIndex + 1] : '';
  if (lang === currentLang) {
    const mod = await recipeModules[path]();
    recipeItems.push(mod.default);
  }
}

const eventGalleryItems = Array.isArray((galleryEs as any)?.images) ? (galleryEs as any).images : [];
