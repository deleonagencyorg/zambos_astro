<script>
  (function() {
      // Mobile carousel (1 card por slide)
      const trackMobile = document.querySelector('[data-truck-packages-track-mobile]') as HTMLElement;
      const slidesMobile = Array.from(document.querySelectorAll('[data-truck-packages-slide-mobile]'));
      const dotsMobile = Array.from(document.querySelectorAll('[data-truck-packages-dot-mobile]'));

      // Desktop carousel (3 cards por slide)
      const trackDesktop = document.querySelector('[data-truck-packages-track-desktop]') as HTMLElement;
      const slidesDesktop = Array.from(document.querySelectorAll('[data-truck-packages-slide-desktop]'));
      const dotsDesktop = Array.from(document.querySelectorAll('[data-truck-packages-dot-desktop]'));

      const prevBtn = document.querySelector('[data-truck-packages-prev]');
      const nextBtn = document.querySelector('[data-truck-packages-next]');

      let currentMobile = 0;
      let currentDesktop = 0;

      const isMobile = () => window.innerWidth < 640;

      const updateMobile = () => {
        if (!trackMobile) return;
        const offset = -currentMobile * 100;
        trackMobile.style.transform = `translateX(${offset}%)`;
        dotsMobile.forEach((dot, i) =>
          dot.setAttribute('data-active', i === currentMobile ? 'true' : 'false')
        );
      };

      const updateDesktop = () => {
        if (!trackDesktop) return;
        const offset = -currentDesktop * 100;
        trackDesktop.style.transform = `translateX(${offset}%)`;
        dotsDesktop.forEach((dot, i) =>
          dot.setAttribute('data-active', i === currentDesktop ? 'true' : 'false')
        );
      };

      prevBtn?.addEventListener('click', () => {
        if (isMobile()) {
          currentMobile = (currentMobile - 1 + slidesMobile.length) % slidesMobile.length;
          updateMobile();
        } else {
          currentDesktop = (currentDesktop - 1 + slidesDesktop.length) % slidesDesktop.length;
          updateDesktop();
        }
      });

      nextBtn?.addEventListener('click', () => {
        if (isMobile()) {
          currentMobile = (currentMobile + 1) % slidesMobile.length;
          updateMobile();
        } else {
          currentDesktop = (currentDesktop + 1) % slidesDesktop.length;
          updateDesktop();
        }
      });

      dotsMobile.forEach((dot, i) => {
        dot.addEventListener('click', () => {
          currentMobile = i;
