              </svg>
            </button>
            <button class="bg-white rounded-full w-12 h-12 flex items-center justify-center hover:bg-gray-100 transition shadow-md">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </button>
            <button 
              type="button"
              class="bg-white rounded-full w-12 h-12 flex items-center justify-center hover:bg-gray-100 transition shadow-md"
              onclick="window.showShareModal && window.showShareModal('shareModal-recipe')"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Recipes Section -->
  <section class="py-12 px-4">
    <div class="w-full max-w-6xl mx-auto">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-3xl md:text-5xl font-bold text-white font-title uppercase">
            {currentLang === 'es' ? 'Recetas similares' : 'Similar recipes'}
          </h2>
          <p class="text-white text-sm md:text-base mt-2">
            {currentLang === 'es' ? 'Descubre mas recetas de la familia Zambos' : 'Discover more recipes from the Zambos family'}
          </p>
        </div>
        <a 
          href={`/${currentLang}/${currentLang === 'es' ? 'recetas' : 'recipes'}`}
          class="bg-red text-white font-bold py-3 px-6 rounded-full uppercase hover:bg-opacity-90 transition whitespace-nowrap"
        >
          {currentLang === 'es' ? 'Ver todas' : 'View all'}
        </a>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {relatedRecipes.map((relatedRecipe: RecipeItem, index: number) => (
          <div
            class={index >= RELATED_PAGE_SIZE ? 'hidden' : ''}
            data-related-recipe-item
          >
            <RecipeCard
              image={relatedRecipe.image || ''}
              title={relatedRecipe.title}
              id={relatedRecipe.id}
              description={relatedRecipe.description}
              category={(relatedRecipe as any).category}
            />
          </div>
        ))}
      </div>

      {relatedRecipes.length > RELATED_PAGE_SIZE && (
        <div class="flex justify-center mt-10">
          <button
            id="loadMoreRelated"
            type="button"
            class="bg-red text-white font-bold py-3 px-8 rounded-full uppercase hover:bg-opacity-90 transition"
          >
            {currentLang === 'es' ? 'Ver más' : 'View more'}
          </button>
        </div>
      )}
    </div>
  </section>

  <section class="w-full">
    <Subscription />
  </section>
</div>

<!-- Tab Switching Script -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const ingredientsTab = document.getElementById('ingredientsTab');
    const preparationTab = document.getElementById('preparationTab');
    const ingredientsContent = document.getElementById('ingredientsContent');
    const preparationContent = document.getElementById('preparationContent');

    ingredientsTab?.addEventListener('click', () => {
      ingredientsTab.classList.add('bg-[#0DB04A]', 'text-white');
      ingredientsTab.classList.remove('bg-white', 'text-gray-900');
      preparationTab?.classList.add('bg-white', 'text-gray-900');
      preparationTab?.classList.remove('bg-[#0DB04A]', 'text-white');
      ingredientsContent?.classList.remove('hidden');
      preparationContent?.classList.add('hidden');
    });

    preparationTab?.addEventListener('click', () => {
      preparationTab.classList.add('bg-[#0DB04A]', 'text-white');
      preparationTab.classList.remove('bg-white', 'text-gray-900');
      ingredientsTab?.classList.add('bg-white', 'text-gray-900');
      ingredientsTab?.classList.remove('bg-[#0DB04A]', 'text-white');
      preparationContent?.classList.remove('hidden');
      ingredientsContent?.classList.add('hidden');
    });

    // Related recipes: Load more (12 + 12)
    const pageSize = 12;
    const items = Array.from(document.querySelectorAll('[data-related-recipe-item]')) as HTMLElement[];
    const loadMoreBtn = document.getElementById('loadMoreRelated') as HTMLButtonElement | null;
    let visibleCount = Math.min(pageSize, items.length);

    function updateRelatedVisibility() {
      items.forEach((el, idx) => {
        if (idx < visibleCount) {
          el.classList.remove('hidden');
        } else {
          el.classList.add('hidden');
        }
      });

      if (loadMoreBtn) {
        if (visibleCount >= items.length) {
          loadMoreBtn.classList.add('hidden');
        } else {
          loadMoreBtn.classList.remove('hidden');
        }
      }
    }

    loadMoreBtn?.addEventListener('click', () => {
      visibleCount = Math.min(visibleCount + pageSize, items.length);
      updateRelatedVisibility();
    });

    updateRelatedVisibility();
  });
</script>

<!-- Share Modal -->
<ShareModal
  id="shareModal-recipe"
  url={Astro.url.href}
  title={recipe.title}
  description={recipe.description}
  hashtags={recipe.tags || []}
  showLabels={false}
  iconSize={40}
  round={true}
  openTextEs="Comparte esta receta en tus redes sociales"
  openTextEn="Share this recipe on your social networks"
  acceptTextEs="Aceptar"
  acceptTextEn="Accept"
/>